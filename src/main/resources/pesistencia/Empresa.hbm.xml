<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>

	 <class name="ar.edu.unq.epers.Empresa" table="Empresa" >
        <id name="cuit" type="string">
            <column name="CUIT" />
            <generator class="identity" />
        </id>

        <property name="nombreEmpresa" type="string">
            <column name="NOMBRE_EMPRESA" length="36" not-null="true" unique="false"/>
        </property>
        
          <bag name="usuarios" inverse="true" cascade="save-update">
        	<key column="USUARIOS" />
        	<many-to-many class="ar.edu.unq.epers.model.IUsuario"/>
        </bag>
        
          <bag name="reservas" inverse="true" cascade="save-update">
        	<key column="RESERVAS" />
        	<one-to-many class="ar.edu.unq.epers.model.Reserva"/>
        </bag>
                
        <property name="cantidadMaximaDeReservasActivas" type="int">
            <column name="CANTIDAD_MAXIMA_DE_RESERVAS_ACTIVAS" length="36" not-null="true" unique="false"/>
        </property>
       
        <property name="valorMaximoPorDia" type="double">
            <column name="VALOR_MAXIMO_POR_DIA" not-null="false" unique="false"/>
        </property>
        
        <bag name="categoriasAdmitidas" inverse="true" cascade="save-update">
        	<key column="CATEGORIAS_ADMITIDAS" />
        	<many-to-many class="ar.edu.unq.epers.model.Categoria"/>
        </bag>
        
        </property>

    </class>
</hibernate-mapping>